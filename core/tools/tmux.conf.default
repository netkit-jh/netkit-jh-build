# Set leader key to ctrl-a (as default is ctrl-b and netkit tmux sessions may be nested in host sessions)
unbind C-b
set-option -g prefix C-a
bind-key C-a send-prefix
unbind m

bind-key h new-window 'less $NETKIT_HOME/tools/tmuxhelp.md'

set -g mouse on
set -s escape-time 0

set-hook -g session-created 'select-pane -m; rename-window netkit-vm; set -t 0 remain-on-exit on'
set-hook -g -t 0 pane-died 'rename-session "#{session_name}-dead"'

set -g status-left "#S    #{?window_zoomed_flag,ğŸ”, }"
set -g status-right "ğŸ§½ #(cat $NETKIT_HOME/netkit-version) : #(basename `pwd`) "
set -g status-style "bg=#b666d2 fg=white"
set -g pane-active-border-style fg=#c78add
set -g status-left-length 200
set -g status-right-length 200
set -g message-command-style "bg=red"
set -g message-style "bg=red"

bind-key r source-file $NETKIT_HOME/tools/tmux.conf \; display-message "Netkit tmux.conf reloaded"

set-hook -g client-attached 'display-message "Connected to Netkit VM"'
set -g focus-events on

# Change status bar color if you move to host shell - so you dont get confused between netkit vm and host
set-hook -g pane-focus-in 'if -F "#{==:#{pane_marked},1}" "set status-style bg=#c78add" "set status-style bg=blue"'

bind c new-window -c "#{pane_current_path}"
bind '"' split-window -c "#{pane_current_path}"
bind % split-window -h -c "#{pane_current_path}"
bind-key -n Home send Escape "OH"
bind-key -n End send Escape "OF"

# Normal Session Capture
unbind S
unbind s # unbind session manage shortcut - we'll use s for save
bind-key s capture-pane -b temp-capture-buffer -S - \; save-buffer -b temp-capture-buffer "#{session_name}.out" \; delete-buffer -b capture-buffer\; display-message "Saved current pane to #{session_name}.out"
# Custom capture filename
bind-key S command-prompt -I "#{session_name}.out" -p "Store current pane contents to file:" "capture-pane -b temp-capture-buffer -S -; save-buffer -b temp-capture-buffer %1; delete-buffer -b capture-buffer"
